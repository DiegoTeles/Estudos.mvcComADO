@model IEnumerable<Estudos.MvcComADO.Models.Times>

<h1>Todos os Times</h1>
<div>
    @Html.ActionLink("Adicionar um novo", "IncluirTime")
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cores)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cores)
        </td>
        <td>
            @Html.ActionLink("Alterar", "EditarTime", new {  id=item.ID_Time }) |
            @Html.ActionLink("Excluir", "ExcluirTime", new { id = item.ID_Time }, new { onclick = "return confirm('Tem certeza que deseja Excluir?');"})
        </td>
    </tr>
}

</table>
